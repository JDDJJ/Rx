<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pew="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/task_des_bg"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/commentsBlank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/media"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_media_h"
                android:scaleType="centerCrop"
                android:transitionName="1111"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/task_status"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_24dp"
                        android:background="@color/task_status_color"
                        android:gravity="center"
                        android:padding="@dimen/cardradios_4dp"
                        android:text="审核中"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_subtitle"
                     />

                    <TextView
                        android:id="@+id/txt_share_money"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_24dp"
                        android:background="@color/share_status_color"
                        android:gravity="center"
                        android:padding="@dimen/cardradios_4dp"
                        android:text="审核中"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_subtitle"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_most_popular"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@color/most_popular_color"
                    android:gravity="center"
                    android:padding="@dimen/cardradios_4dp"
                    android:text="审核中"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_subtitle"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/txt_my_favorite"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@color/my_favorite_color"
                    android:gravity="center"
                    android:padding="@dimen/cardradios_4dp"
                    android:text="审核中"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_subtitle"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_lucky_txt"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@color/luck_star_color"
                    android:gravity="center"
                    android:padding="@dimen/cardradios_4dp"
                    android:text="审核中"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_subtitle"
                    android:visibility="gone"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/feed_play"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/image_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/feed_play"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/image_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/feed_play"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:alpha="0.1"
        android:background="@color/white"/>
</LinearLayout>